{
  "family": "user-app-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::619576923139:role/dhruvi-task-role",
  "taskRoleArn": "arn:aws:iam::619576923139:role/dhruvi-task-role",
  "containerDefinitions": [
    {
      "name": "user-app-backend",
      "image": "DUMMY_BACKEND_IMAGE_WILL_BE_REPLACED",
      "essential": true,
      "environment": [
        { "name": "DB_NAME", "value": "myappdb" },
        { "name": "PORT", "value": "3306" },
        { "name": "DB_HOST", "value": "myappdb.c9oq2ky8kisq.ap-south-1.rds.amazonaws.com" },
        { "name": "DB_USER", "value": "admin" },
        { "name": "DB_PASSWORD", "value": "Admin123456" },
        { "name": "CORS_ORIGIN", "value": "my-app-alb-844843851.ap-south-1.elb.amazonaws.com" }
      ],
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/user-app-backend",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "backend"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:5000/ || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3
      }
    }
  ]
}
