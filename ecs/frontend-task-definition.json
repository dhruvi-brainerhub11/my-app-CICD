{
  "family": "user-app-frontend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::619576923139:role/dhruvi-task-role",
  "taskRoleArn": "arn:aws:iam::619576923139:role/dhruvi-task-role",
  "containerDefinitions": [
    {
      "name": "user-app-frontend",
      "image": "DUMMY_FRONTEND_IMAGE_WILL_BE_REPLACED",
      "essential": true,
      "environment": [
        { "name": "REACT_APP_API_URL", "value": "http://user-app-alb-508171731.ap-south-1.elb.amazonaws.com" }
      ],
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/user-app-frontend",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "frontend"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3000/ || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3
      }
    }
  ]
}
